<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
    android:layout_marginHorizontal="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iw1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/piza"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:fontFamily="@font/oxygen"
            android:gravity="left"
            android:inputType="textCapWords"
            android:text="Malayalam Food"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/iw1"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/twDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/oxygen"
            android:inputType="textCapWords"
            android:text="Tasty Homemade Malayam"
            android:textColor="#94000000"
            android:textSize="12sp"
            card_view:layout_constraintStart_toEndOf="@+id/iw1"
            card_view:layout_constraintTop_toBottomOf="@+id/tv1" />

        <TextView
            android:id="@+id/tvMisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/oxygen"
            android:inputType="textCapWords"
            android:text="Aalandur"
            android:textColor="#94000000"
            android:textSize="14sp"
            card_view:layout_constraintStart_toEndOf="@+id/iw1"
            card_view:layout_constraintTop_toBottomOf="@+id/twDesc" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="80dp"
            android:layout_height="13.49dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            card_view:layout_constraintStart_toEndOf="@+id/iw1"
            card_view:layout_constraintTop_toBottomOf="@+id/tvMisc" />

        <TextView
            android:id="@+id/tvrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"

            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:text="4/5"
            android:textColor="@color/black"
            android:textSize="10sp"
            card_view:layout_constraintStart_toEndOf="@+id/ratingBar"
            card_view:layout_constraintTop_toBottomOf="@+id/tvMisc" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/oxygen"
            android:gravity="center"
            android:text="gooji gooji gooo alankrit, aaj last date hai baby"
            android:textColor="@color/black"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.517"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/ratingBar"
            card_view:layout_constraintVertical_bias="0.049" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


